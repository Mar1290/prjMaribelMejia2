@model List<prjMaribelMejia.Models.Categorias>
<div>
   
    <h1 class="align-content-center p-1 alert-info bg-white text-dark">Categorias</h1>
    </div>

<br />

    <table class="table table-dark table-striped">
        <thead>

            <tr>
                <th>Categoria</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            @{
                //hace referencia a lo que viene como modelo
                foreach(var categoria in Model)
                {
                    <tr>  
                    <td>@categoria.Categoria</td>
                    <td>@categoria.DescripcionCategoria</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class=form-group>      
        <a class="btn btn-info" asp-action="Categorias">Nuevo</a>
    </div>
</div>

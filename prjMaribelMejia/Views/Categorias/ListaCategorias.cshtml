@model List<prjMaribelMejia.Models.Categorias>


<div>  
    <div>
      <h2 class="alert-success">Administración de Categorias</h2>
    </div>

<br />

    <table class="table table-dark table-striped">
        <thead>

            <tr>
                <th>Categoria</th>
                <th>Descripcion</th>
                <th>Acciones</th>
            </tr>
    
        </thead>
        <tbody>
            @{
                //hace referencia a lo que viene como modelo
                foreach(var categoria in Model)
                {
                    <tr>  
                    <td>@categoria.Categoria</td>
                    <td>@categoria.DescripcionCategoria</td>
                    <td>
                    @*opcion 1 boton editar*@
                    @*<a class="btn btn-info" asp-action="EditarCategoria" asp-route="Id">Editar</a>*@
                     
                    @*opcion 2 boton editar*@
                      <a class="btn btn-info" href ="@Url.Action("EditarCategoria", new{ id=categoria.IdCategoria})">Editar</a>
                      <a class="btn btn-danger" asp-action="EliminarCategoria">Eliminar</a>
                    </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class=form-group>      
        <a class="btn btn-success" asp-action="Categorias">Nuevo</a>
  
    </div>
</div>


@*Aquii es donde se encapsulan los datos*@
@model List<prjMaribelMejia.Models.Propietarios>

<h1 class="text-info bg-light rounded border-bottom">Administración de Propietarios</h1>
<div>
<br />
    <table class="table table-dark table-striped">
         <thead>
        <tr>
         <th>Propietario</th>
         <th>Identificación</th>
         <th>Dirección</th>
          <th>Teléfono</th>
          <th>Activo</th>
        </tr>
         </thead>
         <tbody>

                    @{
                //hace referencia a lo que viene como modelo
                foreach(var propietario in Model)
                {
                    <tr>  
                    <td>@propietario.NombrePropietario</td>
                    <td>@propietario.IdentificacionPropietario</td>
                     <td>@propietario.DireccionPropietario</td>
                      <td>@propietario.TelefonoPropietario</td>
                       <td>@propietario.PropietarioActivo</td>
                    <td>
       
                      <a class="btn btn-info" href ="@Url.Action("EditarPropietario", new{ id=propietario.IdPropietario})">Editar</a>
                      @*<a class="btn btn-danger" asp-action="EliminarCategoria">Eliminar</a>*@
                      <a class="btn btn-danger" href ="@Url.Action("AnularPropietario", new{ id=propietario.IdPropietario})">Anular</a>
                    </td>
                    </tr>
                }
            }
         </tbody>
    </table>
        <div class=form-group>      
        <a class="btn btn-success" asp-action="AgregarPropietario">Nuevo</a>
  
    </div>
</div>

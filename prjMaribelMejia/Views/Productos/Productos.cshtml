@*Aquii es donde se encapsulan los datos*@
@model List<prjMaribelMejia.Models.Productos>

    <div>  
    <div>
      <h2 class="alert-success">Catálogo de Productos</h2>
    </div>

<br />

  @*  <table class="table table-dark table-striped">*@
          <table class="table table-bordered table-hover table-striped table-responsive-sm">
        <thead>

            <tr>
                <th>Producto</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Descripción del Producto</th>
                <th>Acciones</th>
            </tr>
    
        </thead>
        <tbody>
            @{
                //hace referencia a lo que viene como modelo
                foreach(var producto in Model)
                {
                    <tr>  
                    <td>@producto.Producto</td>
                    <td>@producto.IdCategoria</td>
                     <td>@producto.Precio</td>
                    <td>@producto.Descripcion</td>
                    <td>                               
                    @*agregamos el botón editar y eliminar*@
                      <a class="btn btn-info" href ="@Url.Action("EditarProducto", new{ id=producto.IdProducto})">Editar</a>
                      <a class="btn btn-danger" href ="@Url.Action("EliminarCategoria", new{ id=producto.IdProducto})">Eliminar</a>
                    </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class=form-group>      
        <a class="btn btn-success" asp-action="AgregarProducto">Nuevo Producto</a>
  
    </div>
</div>

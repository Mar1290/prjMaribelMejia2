@*Aquii es donde se encapsulan los datos*@
@model List<prjMaribelMejia.Models.Productos>


    @{
    List<prjMaribelMejia.Models.Categorias> categorias = ViewBag.ListaCategorias;
}

    <div>  
    <div>
      <h2 class="alert-success">Catálogo de Productos</h2>
    </div>

<br />

  @*  <table class="table table-dark table-striped">*@
          <table class="table tabla-productos table-striped table-bordered table-light">
        <thead class="align-content-center box-shadow alert-dark" >

            <tr>
                <th>Producto</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Descripción del Producto</th>
                <th>Acciones</th>
            </tr>
    
        </thead>
        <tbody>
            @{
  
                //hace referencia a lo que viene como modelo
                foreach(var producto in Model)
                {
                    <tr>  
                    <td>@producto.Producto</td>
              
                    <td>@producto.Categorias.Categoria</td>
                     <td>@producto.Precio</td>
                     <td>
                 
              <a data-id="@producto.IdProducto"  class="btn btn-success fa fa-eye ver-descripcion" href="javascript:void(0); "> Ver Descripción</a>
                    <td>                               
                    @*agregamos el botón editar y eliminar*@
                      <a class="btn btn-info" style="width: 80px;" href ="@Url.Action("EditarProducto", new{ id=producto.IdProducto})">Editar</a>
                      <a class="btn btn-danger" style="width: 80px;" href ="@Url.Action("EliminarCategoria", new{ id=producto.IdProducto})">Anular</a>
                    </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class=form-group>      
        <a class="btn btn-success" asp-action="AgregarProducto">Nuevo Producto</a>
   
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
     
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Descripción del producto</h5>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <span class="valor-descripcion"></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
       @* <button type="button" class="btn btn-primary">Save changes</button>*@
      </div>
    </div>
  </div>
</div>

 @section Scripts{
    <script>

  //$('.tabla-productos').DataTable();  

  $(document).ready(function() {
   // $('#example').DataTable();

//var table = 
$('.tabla-productos').DataTable(
    
    {

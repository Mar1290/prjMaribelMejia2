            "sLengthMenu": "_MENU_ Filtrar por páginas",
            "sZeroRecords": "No se encontró registro",
            "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando 0 ta 0 de 0 entradas",
             "decimal": ".",

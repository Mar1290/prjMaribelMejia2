@model prjMaribelMejia.Models.Productos
@{
    List<prjMaribelMejia.Models.Categorias> categorias = ViewBag.ListaCategorias;
}
@{
    List<prjMaribelMejia.Models.Marcas> lmarcas = ViewBag.ListaMarcas;
}

<h2 class="alert-success">Crear nuevo Producto</h2>

<form asp-action="CrearProducto"  autocomplete="off">
    <div class="table-responsive">
        <label>Producto:  </label>
    <input type="text" class="form-control Nombrepdto" name="Producto" />

        <label>Seleccione Categoria</label>

        <select class="form-control idcat" name="IdCategoria">
            @{
                foreach (var cat in categorias)
                {
                            <option value="@cat.IdCategoria">@cat.Categoria</option>
                }
            }
        </select>
        <label>Precio Unitario C$:</label>
        <input type="text" class="form-control preciopdto" id="Money-2" name="Precio" />
        <label>Descripción del Producto:</label>
        <input type="text" class="form-control descripcion-pdto" name="Descripcion" />
        <label>Seleccione Marca:</label> 

          <select class="form-control idmarca" name="IdMarca">
            @{
                foreach (var marc in lmarcas)
                {
                 <option value="@marc.IdMarca" class="form-control nmarca">@marc.NombreMarca</option>
                }
            }
        </select>
        <br />

        <div class=form-group>          
            <a id="btnGuardar" href="javascrip:void(0);" class="btn btn-success" style="width: 80px;" title="Guardar registro" >Guardar</a>
             <a class="btn btn-dark" asp-action="Productos" title="Retornar" style="width: 80px;">Cancelar</a>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/js/jsProducto.js"></script>
        <script>
        $(function () {
            
      $("#CONTACT_PHONE").mask("(999) 999-9999");
      $('.date').mask('11/11/1111');
      $('.time').mask('00:00:00');
      $('.date_time').mask('99/99/9999 00:00:00');
      $('.telefonop').mask('9999-9999',{ placeholder: '0000-0000' });
      $('#identificacionp').mask("000-000000-0000A", { placeholder: '000-000000-0000A' }); //placeholder
      $('.phone_with_ddd').mask('(99) 99 999 99 99');
      $('.money').mask('000.000.000.000.000,00', {reverse: true});
      $("#CreditCard-2").mask({"mask": "9999 9999 9999 9999", "placeholder" : "**** **** **** ****", "clearMaskOnLostFocus": false});
      $("#Date-2").mask({"mask" : "99/99/9999", "placeholder": "mm/dd/yyyy", "clearMaskOnLostFocus": false});
      $("#Money-2").mask({ alias : "currency", prefix: 'C$', "clearMaskOnLostFocus": false});

        });

    </script>
}